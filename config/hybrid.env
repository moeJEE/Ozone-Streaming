# Hybrid Architecture Configuration
# Local processing with cloud backup and monitoring

# Database Configuration (Local)
DATABASE_URL=postgresql://streaming_user:streaming_pass@localhost:5432/streaming_db
POSTGRES_DB=streaming_db
POSTGRES_USER=streaming_user
POSTGRES_PASSWORD=streaming_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Kafka Configuration (Local)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW_DATA=raw_data
KAFKA_TOPIC_PROCESSED_DATA=processed_data

# Spark Configuration (Local)
SPARK_MASTER=spark://localhost:7077
SPARK_APP_NAME=streaming_pipeline

# Airflow Configuration (Local)
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# AWS Configuration (Cloud)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# S3 Configuration (Cloud)
S3_BACKUP_BUCKET=data-streaming-pipeline-backups
S3_DATA_LAKE_BUCKET=data-streaming-pipeline-data-lake

# CloudWatch Configuration (Cloud)
CLOUDWATCH_NAMESPACE=DataStreamingPipeline
CLOUDWATCH_LOG_GROUP=/aws/local/data-streaming-pipeline

# Environment
ENVIRONMENT=hybrid
DEPLOYMENT_TYPE=hybrid

# API Keys (Optional)
OPENWEATHER_API_KEY=${OPENWEATHER_API_KEY}
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_API_KEY}

# Monitoring
ENABLE_CLOUDWATCH_MONITORING=true
ENABLE_S3_BACKUP=true
BACKUP_INTERVAL_HOURS=6
